<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:droidicon="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="false" android:baselineAligned="false"
    android:background="@color/backgroundGrey"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/learn_binary"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:longClickable="false"
        android:fontFamily="Roboto"
        android:textSize="42sp" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/buttonGrey"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:text="@string/practice"
            android:id="@+id/practice_button"
            android:onClick="toPractice"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/buttonGrey"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonGrey"
            android:textColor="@color/white"
            android:text="@string/tools"
            android:id="@+id/toolsButton"
            android:onClick="toTools"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/buttonGrey"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonGrey"
            android:textColor="@color/white"
            android:text="@string/store"
            android:id="@+id/IAPButton"
            android:textSize="14sp"
            android:onClick="toBuy" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/buttonGrey"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonGrey"
            android:textColor="@color/white"
            android:text="@string/about"
            android:id="@+id/aboutButton"
            android:textSize="16sp"
            android:onClick="toBuy" />
    </android.support.v7.widget.CardView>

</LinearLayout>