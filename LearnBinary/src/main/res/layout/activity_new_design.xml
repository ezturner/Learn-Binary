<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/dashboardBackground">



    <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/blitz_layout"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button7"
                    android:text="@string/zero"
                    android:tag="7"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button6"
                    android:text="@string/zero"
                    android:tag="6"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button7"
                    android:layout_toEndOf="@+id/top_button7" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button5"
                    android:text="@string/zero"
                    android:tag="5"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button6"
                    android:layout_toEndOf="@+id/top_button6"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button4"
                    android:text="@string/zero"
                    android:tag="4"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button5"
                    android:layout_toEndOf="@+id/top_button5"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button3"
                    android:text="@string/zero"
                    android:tag="3"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button4"
                    android:layout_toEndOf="@+id/top_button4"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button2"
                    android:text="@string/zero"
                    android:tag="2"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button3"
                    android:layout_toEndOf="@+id/top_button3"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button1"
                    android:text="@string/zero"
                    android:tag="1"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button2"
                    android:layout_toEndOf="@+id/top_button2"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_button0"
                    android:text="@string/zero"
                    android:tag="0"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/top_button1"
                    android:layout_toEndOf="@+id/top_button1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/target_number_display"
                    android:textSize="30sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/top_button0"
                    android:layout_toEndOf="@id/top_button0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="128"
                android:id="@+id/label_number0"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="64"
                android:id="@+id/label_number1"
                android:singleLine="false"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="32"
                android:id="@+id/label_number2"
                android:layout_marginLeft="42dp"
                android:layout_marginStart="42dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/label_number3"
                android:text="16"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="8"
                android:id="@+id/label_number4"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="4"
                android:id="@+id/label_number5"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2"
                android:id="@+id/label_number6"
                android:singleLine="false"
                android:layout_marginLeft="53dp"
                android:layout_marginStart="53dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1"
                android:id="@+id/label_number7"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:tag="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button7"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:longClickable="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"/>

                <Button
                    android:tag="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button6"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button7"
                    android:layout_toEndOf="@+id/bottom_button7" />

                <Button
                    android:tag="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button5"
                    android:singleLine="true"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/bottom_button6"
                    android:layout_toEndOf="@+id/bottom_button6"/>

                <Button
                    android:tag="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button4"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button5"
                    android:layout_toEndOf="@+id/bottom_button5" />

                <Button
                    android:tag="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button3"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button4"
                    android:layout_toEndOf="@+id/bottom_button4" />

                <Button
                    android:tag="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button2"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button3"
                    android:layout_toEndOf="@+id/bottom_button3"/>

                <Button
                    android:tag="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button1"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button2"/>

                <Button
                    android:tag="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:id="@+id/bottom_button0"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button1"/>

                <TextView
                    android:id="@+id/player_number_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/zero"
                    android:textSize="30sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_button0"
                    android:layout_toEndOf="@+id/bottom_button0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>